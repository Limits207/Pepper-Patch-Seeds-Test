    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome", // Use pwa-chrome for modern VS Code
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5500", // Update to match your serverâ€™s port (e.g., 5500 for Live Server)
